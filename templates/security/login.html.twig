{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-4">
					<div class="text-center mt-5">
						<h1 class="h3 mb-3 font-weight-normal">Login to TUAN-AN MOTO</h1>
					</div>
					<label for="inputEmail">Email</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
					<label for="inputPassword">Password</label>
					<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					<div class="row">
						<div class="col-6 text-left mt-3 ml-0">
							<a class="nav-link active" href="{{path('app_register')}}">Register?</a>
						</div>
						<div class="col-6 text-right">
							<button class="btn btn-lg btn-primary mt-2" type="submit">
								Sign in
							</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</form>
{% endblock %}
